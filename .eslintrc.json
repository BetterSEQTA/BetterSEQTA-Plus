{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true // add this line to allow Node.js-specific globals
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module" // add this line to allow 'import' and 'export' statements
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"]
  }
}